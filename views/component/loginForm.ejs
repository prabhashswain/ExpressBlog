<div class="form-container">
    <form action="" method="post">
        <div class="group">
            <h3>User login</h3>
        </div>
        <div class="group">
            <label for="email">Email </label>
            <input type="text" name="email" id="email" placeholder="Email" class="control">
        </div>
        <div class="group">
            <label for="password">Password </label>
            <input type="password" name="password" id="password" placeholder="Password" class="control">
        </div>
        <div class="group">
            <button type="submit" class="btn btn-sweet">Login</button>
        </div>
    </form>
</div>